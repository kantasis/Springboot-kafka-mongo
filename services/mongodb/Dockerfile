FROM mongo:latest
EXPOSE 27017

ARG MONGO_USERNAME
ENV MONGO_INITDB_ROOT_USERNAME ${MONGO_USERNAME}

ARG MONGO_PASSWORD
ENV MONGO_INITDB_ROOT_PASSWORD ${MONGO_PASSWORD}

RUN echo "username: $MONGO_INITDB_ROOT_USERNAME" >> /test.log
RUN echo "userpass: $MONGO_INITDB_ROOT_PASSWORD" >> /test.log
RUN echo >> /test.log